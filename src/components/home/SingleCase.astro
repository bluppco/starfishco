---
const {
	current,
	total,
	title,
	color,
	img,
	alt
} = Astro.props;
---

<section class="w-full h-full overflow-hidden lg:relative group">
	<div class={`z-10 lg:absolute top-0 left-0 h-full w-full lg:w-[30%] ${color}`}>
		<div class="relative h-full flex flex-col justify-center px-8 py-32 lg:p-12">
			<p class="lg:absolute hidden lg:block top-0 left-0 text-white p-12 text-lg">
				{current} <span class="text-3xl">|</span> {total}
			</p>
			<div>
				<h1 class="text-8xl lg:text-9xl text-white/90 font-bold">{title}</h1>
				<p class="text-white/90 text-xl">See Cases</p>
			</div>	
		</div>
	</div>

	<img src={img} alt={alt} class="group-hover:scale-110 transform transition duration-500" />
</section>