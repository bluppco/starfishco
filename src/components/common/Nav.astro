---
const runtime = Astro.locals.runtime
const env = runtime.env.ENVIRONMENT

import { Icon } from "astro-icon/components";

import Container from "../../layouts/Container.astro";
import MenuButton from "./MenuButton.astro";
---

<section id="nav-bar" class={`py-4 z-30 fixed top-0 left-0 w-full transition-transform delay-100 duration-300 ease-out ${ env === "staging" && "mt-10" }`}>
    <Container>
        <div class="flex justify-between items-center">
            <a href="/">
                <Icon name="logo" font-size="2.2rem" />
            </a>
            <MenuButton />
        </div>
    </Container>
</section>

<script>
    const navBar = document.getElementById("nav-bar")  

    let currentYScroll = window.scrollY
    let fullVideoHeight = window.innerHeight

    const bgNavBar = "bg-white/50"
    const blurNavBar = "backdrop-blur-xl"

    window.addEventListener("scroll", () => {
        if (window.scrollY > fullVideoHeight) {
            navBar.classList.add(bgNavBar)
            navBar.classList.add(blurNavBar)
        } else  {
            navBar.classList.remove(bgNavBar)
            navBar.classList.remove(blurNavBar)
        }

        if (window.scrollY - currentYScroll > 0) {
            // Scroll is going down
            // so remove nave bar 
            navBar.classList.add("-translate-y-28")
        } else {
            // Scroll is going down
            // Scroll is going up
            // so show nave bar 
            navBar.classList.remove("-translate-y-28")
        }

        currentYScroll = window.scrollY
    })
</script>