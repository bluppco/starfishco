---
import { homeAPI } from "../api/home/index"

const runtime = Astro.locals.runtime
const data = await homeAPI( runtime.env.ENVIRONMENT )

const { meta_tags, work } = data

// IMPORTING LAYOUTS
import IndexLayout from "../layout/IndexLayout.astro";

// IMPORTING COMPONENTS
import Nav from "../components/common/Nav.astro";
import Footer from "../components/common/Footer.astro";

import HomeIntro from "../components/home/HomeIntro.astro";
import BrandExperience from "../components/home/brandExperience.astro";
import SeeWork from "../components/home/SeeWork.astro";
import Container from "../components/common/Container.astro";
import Cases from "../components/home/Cases.astro";
import Contact from "../components/home/Contact.astro";

// IMPORTING CONSTANTS
import {OG_IMAGE} from "../constants/website";
---

<IndexLayout
	title={ meta_tags.title }
	description={ meta_tags.description }
	image={OG_IMAGE}
>

	{/* Navigation */}
	<Nav />

	{/* Home */}
	<HomeIntro />

	{/* See Work Floter */}
	<SeeWork />

	<BrandExperience />

	{/* works */}
	<Container>
		<Cases data={ work }/>
	</Container>

	{/* contact */}
	<Contact />

	{/* footer */}
	<Footer />
</IndexLayout>